#!/bin/bash

# remap caps and tab
xmodmap $XDG_CONFIG_HOME/Xmodmap/config &
xcape -e 'Control_L=Escape;Hyper_R=Tab' &

# hotkeys
sxhkd &

# remove cursor when typing
xbanish &

# gnome authentication agent
eval $(/usr/bin/gnome-keyring-daemon --start --components=pkcs11,secrets,ssh)
export SSH_AUTH_SOCK &

# lock screen
xss-lock -n /usr/share/doc/xss-lock/dim-screen.sh -- i3lock -n -u -c 1c69b1 -i $XDG_PICTURES_DIR/backgrounds/blue_screen.png &

# start music player daemon
mpd &

# start polybar
load_polybar.sh &

# start i3
exec herbstluftwm
