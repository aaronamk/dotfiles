# reload
super + r
	reload.sh

# simulate arrow keys
@mod1 + {h,j,k,l}
	xdotool key --clearmodifiers {Left,Down,Up,Right}

# switch desktop (fallback, slightly slower)
#mod3 + {0-9}
#	xdotool set_desktop {0-9}
#mod3 + {comma,period}
#	xdotool set_desktop "$(expr $(xdotool get_desktop) {- 1,+ 1})"

# launch terminal
mod3 + Return
	$TERMINAL -t "terminal"

# launch editor
mod3 + semicolon
	$TERMINAL -e $EDITOR

# launch launcher
mod3 + shift + Return
	$TERMINAL -t "launch" -e fzf-launch.sh

# explore directories
mod3 + e
	$TERMINAL -e vifm

# fuzzy find file
mod3 + {_,shift} + slash
	$TERMINAL -e {fzf-open.sh,fzf-open-meta.sh}

# launch browser
mod3 + {_,shift} + backslash
	$BROWSER {_,-private-window}

# launch music player
mod3 + m
	$TERMINAL -c 130 -r 70 -t "music_browser" -e ncmpcpp
	#$TERMINAL -g 130x90 -t "music_browser" -e ncmpcpp # st

# select from clipboard history
super + p
	$TERMINAL -t "clipboard" -e clipmenu

# screenshot
Print
	screenshot.sh

# session functions
super + Scroll_Lock
	systemctl suspend
super + shift + q
	$TERMINAL -c 30 -r 15 -t "session_options" -e fzf-session-options.sh
#	$TERMINAL -g 30x15 -t "session_options" -e fzf-session-options.sh # st

# audio
XF86Audio{Mute,LowerVolume,RaiseVolume}
	pactl set-sink-{mute @DEFAULT_SINK@ toggle,volume @DEFAULT_SINK@ -2%,\
	                                           volume @DEFAULT_SINK@ +2%}
super + {h,l}
	pactl set-sink-volume @DEFAULT_SINK@ {-,+}2%
super + shift + h
	pactl set-sink-mute @DEFAULT_SINK@ toggle
super + shift + l
	$TERMINAL -c 130 -r 30 -t "audio_mixer" -e pulsemixer
#	$TERMINAL -g 130x30 -t "audio_mixer" -e pulsemixer # st

# mpd
{Pause,super + comma,super + period}
	mpc {toggle,prev,next}

# brightness
XF86MonBrightness{Down,Up}
	set-brightness.sh {-,+}
super + {j,k}
	set-brightness.sh {-,+}

# redshift
super + shift + {j,k}
	{brightnessctl set 1; redshift -P -O 2500 -b 0.9,redshift -x}
