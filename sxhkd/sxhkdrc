# reload
super + r
	autorandr -c; \
	pkill -USR1 -x sxhkd; \
	xset r rate 300 35; \
	xrdb -load $XDG_CONFIG_HOME/Xresources; \
	xmodmap /home/ak/.config/Xmodmap/config; \
	pkill xcape; \
	xcape -e 'Control_L=Escape;Hyper_R=Tab'

# switch desktop (fallback, slightly slower)
#mod3 + {0-9}
#	xdotool set_desktop {0-9}
#mod3 + {comma,period}
#	xdotool set_desktop "$(expr $(xdotool get_desktop) {- 1,+ 1})"

# launch terminal
mod3 + Return
	$TERMINAL

# launch editor
mod3 + semicolon
	$TERMINAL -e $EDITOR

# launch launcher (rofi)
{mod3 + shift + Return,alt + Tab}
	rofi -show {_,window}

# explore directories
mod3 + e
	$TERMINAL -e vifm

# fuzzy find file
mod3 + {_,shift} + slash
	$TERMINAL -e {fzf_open.sh,fzf_open_meta.sh}

# launch browser
mod3 + {_,shift} + backslash
	$BROWSER {_,-private-window}

# launch music player
mod3 + m
	pkill ncmpcpp; \
	mpc rescan; \
	$TERMINAL -n "ncmpcpp" -e ncmpcpp

# lock screen
super + Escape
	i3lock -n -u -c 1c69b1 -i $XDG_PICTURES_DIR/backgrounds/blue_screen.png

# screenshot
Print
	$(import $XDG_PICTURES_DIR/screenshot_tmp.png && mv $XDG_PICTURES_DIR/screenshot_tmp.png $XDG_PICTURES_DIR/$(rofi -dmenu -p 'Screenshot' -filter "$(date +'%m-%d-%y_%I:%M:%S_%P'.png)"))

# rename workspace
super + F2
	rename_ws.sh

# session functions
super + Scroll_Lock
	systemctl suspend
super + shift + q
	$TERMINAL -n "session_options" -e session_options.sh

# volume
XF86Audio{Mute,LowerVolume,RaiseVolume}
	pactl set-sink-{mute @DEFAULT_SINK@ toggle,volume @DEFAULT_SINK@ -2%,volume @DEFAULT_SINK@ +2%}
super + {Left,Right}
	pactl set-sink-volume @DEFAULT_SINK@ {-,+}2%

# mpd
{Pause,super + comma,super + period}
	mpc {toggle,prev,next}

# spotify
super + {p,Prior,Next}
	spotify_ctrl.sh {p,Left,Right}

# brightness
XF86MonBrightness{Down,Up}
	set_brightness.sh {-,+}
super + {Down,Up}
	set_brightness.sh {-,+}

# redshift
super + shift + {Down,Up}
	{brightnessctl set 1; redshift -P -O 2500 -b 0.9,redshift -x}
