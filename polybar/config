[global/wm]
margin-top = 0

[colors]
;background = ${xrdb:color0:#222}
background = #000000
dark-gray = #32302f
;foreground = ${xrdb:color7:#222}
white = #ebdbb2
light-white = #ebdbb2
light-gray = #928374
highlight = #fabd2f

[bar/secondary]
width = 100%
height = 16
bottom = true
monitor = ${env:MONITOR:}
override-redirect = true

background = ${colors.background}
foreground = ${colors.white}

line-size = 1
line-color = #f00

font-0=Hack:size=10;2
font-1=Font Awesome 5 Free Solid:size=10;2
font-2=Noto Sans:size=10;2

modules-left = bspwm
modules-center = title_secondary
modules-right = date
separator = "%{F#aaaaaa} ┃ %{F-}"

[bar/bottom]
enable-ipc=true
wm-restack = i3
width = 100%
height = 16
bottom = true
monitor = ${env:MONITOR:}
override-redirect = true

background = ${colors.background}
foreground = ${colors.white}

line-size = 1
line-color = #f00

tray-position = right
tray-detached = true
tray-offset-y = -16

font-0=Hack:size=10;2
font-1=Font Awesome 5 Free Solid:size=10;2
font-2=Noto Sans:size=10;2

modules-left = bspwm mpd spotify
modules-center = title
modules-right = network audio BAT1 memory date
separator = "%{F#aaaaaa} ┃ %{F-}"

[module/network]
type = internal/network
interface = wlp4s0
interval = 5

label-disconnected = "%{F#55555}%{F-}"
label-connected =  %signal%% [%essid%]

[module/audio]
type = internal/pulseaudio
label-volume =  %percentage%%
label-muted =  %percentage%%
label-muted-foreground = #32302f

[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600
; format-online = <toggle> <label-song>
label-song = %title% • %artist%

[module/spotify]
type = custom/script
exec = spotify.sh

[module/title]
type = internal/xwindow
label = " %title:0:100:...% "
label-background = ${colors.light-gray}
label-foreground = ${colors.background}

[module/title_secondary]
type = internal/xwindow
label = " %title:0:50:...% "
label-background = ${colors.light-gray}
label-foreground = ${colors.background}

[module/BAT0]
time-format = %H:%M
label-charging =  %percentage%%
label-discharging =  %percentage%% [%time%]
label-full = 

type = internal/battery
full-at = 80
battery = BAT0
adapter = AC
poll-interval = 10

[module/BAT1]
time-format = %H:%M
label-charging =  %percentage%%
label-discharging =  %percentage%% [%time%]
label-full =
; 

type = internal/battery
full-at = 80
battery = BAT1
adapter = AC
poll-interval = 10

[module/date]
type = internal/date
date = %m-%d-%y %I:%M:%S %P

[module/memory]
type = custom/script
exec = memory.sh

[module/bspwm]
type = internal/bspwm
enable-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true
label-mode-padding = 1
label-mode-foreground = ${colors.white}

label-dimmed = %name%
label-dimmed-background = ${colors.light-gray}
label-dimmed-foreground = ${colors.background}
label-dimmed-padding = 1

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.highlight}
label-focused-foreground = ${colors.background}
label-focused-padding = 1

;label-occupied = %index%:%name%

; Separator in between workspaces
label-separator = " "
label-separator-foreground = ${colors.light-gray}

[settings]
screenchange-reload = true

